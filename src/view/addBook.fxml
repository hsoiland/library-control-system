<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AddBookController"
      alignment="center" spacing="10">
    <GridPane hgap="10" vgap="10">
        <Label styleClass="Label" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id= "titleTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label styleClass="Label" text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="authorTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label styleClass="Label" text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="genreTf" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    <Label styleClass="Label" fx:id="bookBookedLbl"/>
    <Button styleClass="button" fx:id="addBookBtn" text="Add Book" onAction="#handleAddBook"/>
    <Button styleClass="button" fx:id="closeAddBookBtn" text="Close" onAction="#handleCloseAddBook"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
