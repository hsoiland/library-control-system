<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AddPatronController"
      alignment="center" spacing="10">
    <GridPane hgap="10" vgap="10">
        <Label text="Patron ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id= "IDTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Patron Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="patronNameTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    <Label fx:id="patronAddedLbl"/>
    <Button fx:id="addPatronBtn" text="Add Patron" onAction="#handleAddPatron"/>
    <Button fx:id="closeAddPatronBtn" text="Close" onAction="#handleCloseAddPatron"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>